extends layout

block content
  h1= title
  p Welcome to #{title}

  h2= job.name

  p= msg
   form(action="sendWithFile", 
      method="post",
      enctype="multipart/form-data")
      input(type="text" name="subject" style="display:none" value="jobsearch #{title}")

      p
         input(type="text", name="name", required)
      p
         input(type="text", name="email", required)
      p
         input(type="text", name="phone", required)
      p
      p
         input(name="cv",
               type="file",
               required)
      p
         input(name="pb",
               type="file",
               required)
      p
         button(type="submit") Submit

   form(action="sendWithoutFile", 
      method="post")
      input(type="text" name="subject" style="display:none" value="jobsearch #{title}  utan attachments")
      p
         input(type="text", name="name", required)
      p
         input(type="text", name="email", required)
      p
         input(type="text", name="phone", required)
      p
         button(type="submit") Submit


